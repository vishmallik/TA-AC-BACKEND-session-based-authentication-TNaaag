<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') -%>

    <body>
        <header class=" py-4 bg-blue-500 ">
            <div class="container mx-auto flex justify-between items-center">
                <a href="/" class="w-1 text-yellow-300 font-bold text-3xl">Shopkart</a>
                <nav class="">
                    <ul class="list-none flex items-center align-middle">
                        <li class="px-5 text-xl text-white"><a href="/">Home</a></li>


                        <li class="px-5 text-xl text-white"><a href="/products/cart">
                                Go to Cart<i class="fa-solid fa-cart-shopping pl-4"></i></a>
                        </li>
                        <li class="px-5 text-xl text-white"><a href="/users/logout">Logout</a></li>

                    </ul>
                </nav>
            </div>
        </header>
        <main>
            <p class="text-green-500 text-xl mx-auto py-4 text-center">
                <%=msg%>
            </p>
            <section class="flex justify-start container mx-auto mt-10 flex-wrap pt-28">
                <div class="basis-1/3">
                    <img src="<%=product.image%>" alt="<%=product.name%>" class="w-full">
                </div>
                <div class="mx-auto px-32 basis-2/3 text-left">
                    <h3 class="text-4xl py-2 mx-auto">
                        <%=product.name%>
                    </h3>
                    <p class="text-xl"> <strong class="font-bold">Quantity: </strong>
                        <%=product.quantity%>
                    </p>
                    <p class="text-xl py-2
                            "> <strong class="font-bold">Price:</strong> â‚¹<%=product.price%>
                    </p>
                    <p class="text-xl"><i class=" fas fa-heart py-2 text-red-600 mr-2"></i>
                        <%=product.likes%>
                    </p>
                    <div class="py-2 text-xl"><a href="/products/<%=product.id%>/like" class="mr-4 text-blue-500"><i
                                class="fas fa-thumbs-up"></i></a>
                        <a href="/products/<%=product.id%>/dislike" class="mr-4 text-red-500"><i class=" fas
                                    fa-thumbs-down"></i></a>
                    </div>
                    <div>
                        <a href="/products/<%=product.id%>/cart"
                            class="bg-green-400 rounded-lg py-2 px-4 text-white font-semibold inline-block my-4 mr-4 text-xl">Add
                            to cart</a>
                        <a href="/products/<%=product.id%>/buy"
                            class="bg-orange-400 rounded-lg py-2 px-4 text-white font-semibold inline-block my-4  text-xl">Buy
                            Now</a>
                    </div>
                    <%if(admin){%>
                        <div>
                            <a href="/products/<%=product.id%>/edit"
                                class="bg-blue-400 rounded-lg py-2 px-4 text-white font-semibold inline-block my-4  text-xl">Edit</a>
                            <a href="/products/<%=product.id%>/delete"
                                class="bg-red-400 rounded-lg py-2 px-4 ml-4 text-white font-semibold inline-block my-4 text-xl">Delete</a>
                        </div>
                        <% }%>
                </div>
            </section>
            <section class="container mx-auto py-28">
                <h2 class="text-3xl py-4 pl-2">Add Comment</h2>
                <form action="/products/<%=product.id%>/comments" method="post"
                    class="flex flex-col basis-48 border-4 border-teal-100 rounded-lg p-8 border-solid w-2/5">
                    <input class="py-2 border-teal-100 border-2 my-2 px-4 rounded-lg text-2xl w-100  " type="text"
                        placeholder="Name" name="author">
                    <textarea class="py-2 border-teal-100 border-2 my-2 px-4 rounded-lg text-2xl w-100  " type="text"
                        name="content" placeholder="Comment" cols="7" rows="4"></textarea>
                    <input
                        class="py-2 border-teal-100 border-2 my-2 px-4 rounded-lg text-2xl w-100 bg-teal-400 text-white "
                        type="submit" value="Add Comment">
                </form>
                <h2 class="text-3xl py-4 pt-10 pl-2">Comments</h2>
                <hr>
                <% product.comments.forEach(comment=>{%>
                    <div class="p-4 my-2">
                        <h4 class="font-bold text-teal-400 text-xl inline">
                            <%=comment.author%>
                        </h4>wrote
                        <p class="py-2 text-md">
                            <%=comment.content%>
                        </p>
                        <div>
                            <a href="/comments/<%=comment.id%>/edit"
                                class="bg-blue-400 rounded-md py-1 px-2 text-white font-semibold inline-block my-2 text-md">Edit</a>
                            <a href="/comments/<%=comment.id%>/delete"
                                class="bg-red-400 rounded-md py-1 px-2 ml-4 text-white font-semibold inline-block my-2 text-md">Delete</a>
                            <hr>
                        </div>
                    </div>
                    <% })%>
            </section>
        </main>
        <footer>

        </footer>
    </body>

</html>